#article-container
  .flink
    margin-bottom: 20px

    .flink-list
      overflow: auto
      padding: 10px 10px 0
      text-align: center

      & > .flink-list-item
        position: relative
        float: left
        overflow: hidden
        margin: 15px 7px
        width: calc(100% / 3 - 15px)
        height: 90px
        border-radius: 8px
        line-height: 17px
        -webkit-transform: translateZ(0)
        transition: .3s
        transition-timing-function: ease-in-out
        display: flex

        +maxWidth1024()
          width: calc(50% - 15px) !important

        +maxWidth600()
          width: calc(100% - 15px) !important

        &:hover
          //.flink-item-icon
          //transform: scale(1)
          background: rgba(128,128,128,.1)
          //margin-left: -10px
          //width: 0
          box-shadow: 0 3px 8px 6px rgba(128,128,128,.1)
          a
            img
              transition: .6s
              width: 0
              height: 0
              opacity: 0
              margin: 0.5rem
              //min-width: 0
              min-height: 0
            .flink-item-desc
              overflow: hidden
              width: 100%

        /*&:before
          position: absolute
          top: 0
          right: 0
          bottom: 0
          left: 0
          z-index: -1
          background: var(--text-bg-hover)
          content: ''
          transition: transform .3s ease-out
          transform: scale(0)*/

        &:hover:before,
        &:focus:before,
        &:active:before
          transform: scale(1)

        a
          color: var(--font-color)
          text-decoration: none
          display: flex
          border: none
          width: 100%
          height: 100%
          align-items: center

          &:hover
            background: 0 0

          span
            transition: .3s

          img
            border-radius: 50%
            margin: 15px 20px 15px 15px
            transition: .3s
            width: 60px
            height: 60px
            //transition: filter 375ms ease-in .2s, transform .3s
            object-fit: cover

          .flink-item-desc
            white-space: normal
            padding: 5px 10px 16px 0 !important
            color: var(--heo-fontcolor)
            text-align: left
            height: 40px
            //text-overflow: ellipsis
            opacity: .7
            display: -webkit-box
            //overflow: hidden
            -webkit-box-orient: vertical
            -webkit-line-clamp: 2

          .flink-item-name
            text-align: left
            font-size: 1.2em
            line-height: 2em

          .flink-item-icon
            float: left
            overflow: hidden
            margin: 15px 10px
            width: 60px
            height: 60px
            border-radius: 35px
            transition: width .3s ease-out

            img
              border-radius: 50%
              margin: 15px 20px 15px 15px
              transition: .3s
              width: 100%
              height: 100%
              //transition: filter 375ms ease-in .2s, transform .3s
              object-fit: cover

          .img-alt
            display: none

    .flink-item-name
      @extend .limit-one-line
      //padding: 16px 10px 0 0
      //height: 40px
      //font-weight: bold
      //font-size: 1.43em
      display: block
      padding: 0 10px 0 0
      font-weight: 700
      max-width: calc(100% - 12px)

    .flink-item-desc
      @extend .limit-one-line
      //padding: 16px 10px 16px 0
      //height: 50px
      font-size: .95em

    .flink-name
      margin-bottom: 5px
      font-weight: bold
      font-size: 1.5em

.flink-list-item
  .flink-item-info
    display: flex
    flex-direction: column
    justify-content: center
    width: calc(100% - 90px)
    height: fit-content
  &:hover
    .flink-item-info
      width: 100%
